{
  "description": "Converts all pages to use the Dotsies font.",
  "name": "Dotsies",
  "version": "1.0",
  "background_page": "background.html",
  "icons": {
    "128": "dotsies128.png"
  },
  "content_scripts": [{
    "all_frames": true,
    "js": ["inject.js"],
    "matches": ["http://*/*", "https://*/*"],
    "run_at": "document_start"
  }],
  "browser_action": {
    "default_icon": "dotsies128.png",
    "default_title": "Toggle Dotsies"
  },
  "permissions": [ "tabs", "http://*/*", "https://*/*" ]
}
